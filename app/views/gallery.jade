include header
div
    h1(align='center') My tag is #{tag}
    br
    .col-lg-4
        .panel.panel-default
            .slideshow-container
                .mySlides
                    .numbertext 1 / 3
                    iframe(src='https://guarded-scrubland-78590.herokuapp.com/giphy/' + tag)
                .mySlides
                    .numbertext 2 / 3
                    iframe(src='https://guarded-scrubland-78590.herokuapp.com/giphy/' + tag)
                .mySlides
                    .numbertext 3 / 3
                    iframe(src='https://guarded-scrubland-78590.herokuapp.com/giphy/' + tag)
                a.prev(onclick="plusSlides(-1)") &#10094;
                a.next(onclick="plusSlides(1)") &#10095;
            p(align='center')
                a.btn.btn-primary.btn-lg(href='gallery?tag=' + tag) Refresh my #{tag}
    .col-lg-4
        .panel.panel-default
            .panel-heading
                h3 Change your search
            .panel-body
            form(action="/gallery")
                p(align='center')
                    input(type="text" name="tag" value="Cat")
                p(align='center')
                    input.btn.btn-primary.btn-lg(type="submit" value="Submit")
    script(type='text/javascript', src='/javascripts/slidder.js')
